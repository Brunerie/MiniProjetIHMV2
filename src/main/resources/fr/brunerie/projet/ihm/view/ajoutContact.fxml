<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.brunerie.projet.application.ajoutContactController">
    <center>
        <VBox onKeyPressed="#validerFormulaire" alignment="CENTER" spacing="10">
            <Text scaleX="2" scaleY="2" text="Nouveau Contact">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Text>
            <HBox alignment="CENTER">
                <GridPane alignment="CENTER" prefHeight="250.0" prefWidth="300.0" vgap="20" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
                    <Label text="Nom" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="nomContactField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Prénom" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="prenomContactField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Adresse" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="adresseContactField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="emailContactField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label text="Téléphone" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField fx:id="telContactField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                </GridPane>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <VBox alignment="CENTER">
            <Button fx:id="btnValider" onAction="#creerContact" text="Valider"/>
        </VBox>
    </bottom>
</BorderPane>
